<header class="nav">
  <div class="nav-container">
    <h2 class="navbar-header"><%= title %></h2>
    <% if user_signed_in? %>
    <%= link_to destroy_user_session_path, data: {turbo_method: :delete } do %>
    <button
      class="nav-button"
      type="button"
      aria-label="Logout button"
    >
      <i class="material-icons outline">Logout</i>
    </button>
    <% end %>
    <% else %>  
      <%= link_to new_user_session_path  do %>
      <button
        class="nav-button"
        type="button"
        aria-label="Login button"
      >
        <i class="material-icons outlined">login</i>
      </button>
      <% end %>
    <% end %>
  </div>
</header>